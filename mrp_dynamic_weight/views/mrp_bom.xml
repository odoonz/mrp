<odoo>

    <record model="ir.ui.view" id="mrp_bom_form_view">
        <field name="name">mrp.bom.form (in mrp_dynamic_weight)</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']//tree/field[@name='attribute_value_ids']" position="before">
                <field name="scale_weight"
                       attrs="{'readonly': [('product_uom_id', '!=', %(product.product_uom_kgm)d)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
