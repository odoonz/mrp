<odoo>

    <record model="ir.ui.view" id="mrp_bom_form_view">
        <field name="name">mrp.bom.form (in mrp_dynamic_lines)</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']//tree/field[@name='product_id']" position="replace">
                <field name="product_id" context="{'default_type': 'product'}" invisible="1" />
                <field name="product_tmpl_id" context="{'default_type': 'product'}" />
                <field name="variant_id" domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                       context="{'default_type': 'product'}" />
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']//tree/field[@name='attribute_value_ids']" position="before">
                <field name="scale_weight" />
                <field name="match_attributes" />
                <field name="required_value_ids" widget="many2many_tags"
                       domain="[('product_ids.product_tmpl_id', '=', product_tmpl_id)]" />
            </xpath>
        </field>
    </record>

</odoo>
